<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.create.CreateFragment">


        <TextView
            android:id="@+id/RecipeFragm_PrepTitle"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginStart="72dp"
            android:text="PREP"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFragm_Prep_Time"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/recipeFragm_PrepTitle"
            android:layout_width="40dp"
            android:layout_height="19dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="2dp"
            android:text="COOK"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFragm_Cook_Time"
            app:layout_constraintEnd_toStartOf="@+id/recipeFragm_PrepTitle2" />

        <TextView
            android:id="@+id/recipeFragm_PrepTitle2"
            android:layout_width="45dp"
            android:layout_height="19dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="2dp"
            android:text="TOTAL"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFragm_Total_Time"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/RecipeFragm_Instructions"
            android:layout_width="358dp"
            android:layout_height="241dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:text="instruction"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@+id/RecipeFragm_Edit_Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Spinner" />


        <TextView
            android:id="@+id/RecipeFragm_Prep_Time"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:text="Prep Time"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFragm_Cook_Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Recipe_Name" />


        <TextView
            android:id="@+id/RecipeFragm_Cook_Time"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:text="Cook Time"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/RecipeFragm_Total_Time"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Recipe_Name" />

        <TextView
            android:id="@+id/RecipeFragm_Total_Time"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:text="Total Time"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Recipe_Name" />

        <TextView
            android:id="@+id/RecipeFragm_Appliance"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="112dp"
            android:background="#00BCD4"
            android:text="Appliance"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Recipe_Name" />

        <TextView
            android:id="@+id/RecipeFragm_Category"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="16dp"
            android:background="#00BCD4"
            android:text="Category"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.739"
            app:layout_constraintStart_toEndOf="@+id/RecipeFragm_Appliance"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Recipe_Name" />

        <ImageView
            android:id="@+id/RecipeFragm_Img"
            android:layout_width="0dp"
            android:layout_height="294dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            android:src="@drawable/plate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/RecipeFragm_Recipe_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:text="Recipe Name"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Img" />

        <Button
            android:id="@+id/RecipeFragm_Edit_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="EDIT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.311"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Instructions" />

        <Button
            android:id="@+id/recipeFragm_Del_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DELETE"
            app:backgroundTint="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.669"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Instructions"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/RecipeFragm_Spinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.552" />

        <TextView
            android:id="@+id/RecipeFragm_MadeBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="Made By: "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeFragm_Instructions" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>